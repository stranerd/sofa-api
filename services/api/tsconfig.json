{
	"compilerOptions": {
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"noImplicitAny": false,
		"target": "ES2021",
		"module": "commonjs",
		"moduleResolution": "Node",
		"lib": ["ES2021"],
		"esModuleInterop": true,
		"allowJs": false,
		"sourceMap": false,
		"strict": true,
		"noEmit": false,
		"experimentalDecorators": true,
		"types": ["@types/node"],
		"paths": {
			"@application/*": ["./src/application/*"],
			"@modules/*": ["./src/modules/*"],
			"@utils/*": ["./src/utils/*"]
		},
		"baseUrl": "./",
		"rootDir": "src",
		"outDir": "lib"
	},
	"include": ["src"],
	"exclude": ["node_modules", "lib"]
}
