{
	"extends": "@k11/ts-config/node",
	"compilerOptions": {
		"types": ["@types/node"],
		"paths": {
			"@application/*": ["./src/application/*"],
			"@modules/*": ["./src/modules/*"],
			"@utils/*": ["./src/utils/*"]
		},
		"rootDir": "src",
		"outDir": "lib"
	},
	"include": ["src"],
	"exclude": ["node_modules", "lib"]
}
