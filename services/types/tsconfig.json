{
	"compilerOptions": {
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"noImplicitAny": false,
		"target": "ESNext",
		"module": "commonjs",
		"moduleResolution": "Node",
		"lib": ["ESNext"],
		"esModuleInterop": true,
		"allowJs": false,
		"sourceMap": false,
		"strict": true,
		"noEmit": false,
		"experimentalDecorators": true,
		"types": ["@types/node"],
		"baseUrl": "./",
		"rootDir": "src",
		"outDir": "lib"
	},
	"include": ["src"],
	"exclude": ["node_modules", "lib"]
}
